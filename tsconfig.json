{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": ".",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": ".",
    "declaration": true,
    "incremental": true
  },
  "files": [
    "./declaration.d.ts"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "bin",
    "node_modules",
    "templates",
    "templates/**/*",
    "**/node_modules/**",
    "*.tsbuildinfo"
  ],
}
